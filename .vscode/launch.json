  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Unit Tests",
      "env": {
        "BABEL_ENV": "testDebug"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "runtimeArgs": ["--nolazy"],
      "args": ["--runInBand", "--no-cache"],
      "sourceMaps": true,
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Unit Tests for current workspace file",
      "env": {
        "BABEL_ENV": "testDebug"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "runtimeArgs": ["--nolazy"],
      "args": ["${fileBasenameNoExtension}", "--runInBand", "--no-cache"],
      "sourceMaps": true,
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Unit Tests by TestPathPattern",
      "env": {
        "BABEL_ENV": "testDebug"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "runtimeArgs": ["--nolazy"],
      "args": ["${input:testPathPattern}", "--runInBand", "--no-cache"],
      "sourceMaps": true,
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ],
  "inputs": [
    {
      "id": "testPathPattern",
      "type": "promptString",
      "description": "Enter Test Path Pattern",
      "default": ""
    }
  ]
}
